layout h1
{
	src : int;
	dst : int;
	type : int;
}


layout h2
{
	src : int;
	dst : int;
	protocol: int;
}


layout h3 {
  stuff : int;
}


decoder start d1(h1)
{
  extract h1::src;
  match (h1::src) {
    case 0: decode d2;
		case 1: decode d3;
		// case 3: goto t1;
  }
}


decoder d2(h2)
{
  extract h2::dst;
  match (h2::dst) {
    // case 0: decode d3;
		case 1: decode d2;
		case 2: decode d4;
  }
}


decoder d3(h3)
{
	extract h3::stuff;
	match (h3::stuff) {
		case 0: decode d3;
		case 1: decode d4;
	}
}

decoder d4(h1)
{
	extract h1::src;
	goto t1;
}

exact_table t1(h1::src, h2::dst, h3::stuff)
{
  {0, 1, 2} -> {  }
	{1, 2, 3} -> {  }
}
