foreign def puts(char[]) -> int;

Port p1 = ":5000";

layout eth
{
	dst : uint(48);
	src : uint(48);
	type : uint(16);
}


decoder start eth_d(eth)
{
  extract eth.dst;
  extract eth.type;
  goto switch;
}

exact_table switch(eth.dst, eth.type)
{
	// This should cause alternating miss and using prints.
  miss ->
  {
		puts("Miss...adding flow now.");

    insert
    { eth.dst, eth.type } ->
    {
			puts("Using adding flow now.");
			remove { eth.dst, eth.type } from switch;
      output p1;
    }
    into switch;

    output p1;
  }
}
