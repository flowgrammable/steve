foreign def puts(char[]) -> int;

Port p1 = 2;

layout eth
{
	dst : uint(48);
	src : uint(48);
	type : uint(16);
}


decoder start eth_d(eth)
{
  extract eth.dst;
	extract eth.src;
  goto learn;
}


exact_table learn(eth.src)
{
  miss ->
  {
		puts("Learning eth src.");

    insert
    { eth.src } ->
    {
      output p1;
    }
    into switch;

    goto switch;
  }
}

exact_table switch(eth.dst)
{
  miss ->
  {
		puts("missed...flooding...");
    flood;
  }
}
