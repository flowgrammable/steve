foreign def puts(char[]) -> int;

Port p1 = ":5000";

layout eth
{
	src : uint(48);
	dst : uint(48);
	type : uint(16);
}


decoder start eth_d(eth)
{
	extract eth.src;
  extract eth.dst;
  goto learn;
}


exact_table learn(eth.src)
{
  miss ->
  {
		puts("Learning eth src.");

    add
    { eth.src } ->
    {
      output p1;
    }
    into switch;

    goto switch;
  }
}

exact_table switch(eth.dst)
{
  miss ->
  {
		puts("missed...flooding...");
    flood;
  }
}
