Port p1;

layout eth
{
	src : uint(48);
	dst : uint(48);
	type : uint(16);
}

decoder start eth_d(eth)
{
	extract eth.dst;
	extract eth.src;
  extract eth.type;
	set eth.type = eth.type << 80;
  set eth.dst = 880;
	clear;
	write output p1;
	write output all;
	write output reflow;
  write set eth.type = 0x800;
	output reflow;
	output p1;
	output all;
	output flood;
	var x : int = -32;
	insert { p1, x, x } -> { } into t1;
}

exact_table t1(in_port, eth.dst, eth.src)
{
	[egress = p1]
	{ p1, 0, 0 } ->
	{
		output egress;
	}
}
