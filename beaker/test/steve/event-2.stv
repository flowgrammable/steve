foreign def puts(char[]) -> int;

layout eth
{
	src : uint(48);
	dst : uint(48);
	type : uint(16);
}


decoder start eth_d(eth)
{
	extract eth.src;
  extract eth.dst;
	extract eth.type;
  goto learn;
}


event switch_learn(eth.src, eth.type)
{
  add
  { eth.src } ->
  {
    drop;
  }
  into switch;

	set eth.type = 1111;

  goto switch;
}


exact_table learn(eth.src)
	requires(eth.type)
{
  miss ->
  {
    raise switch_learn;
		goto switch;
  }
}


exact_table switch(eth.dst)
{
  miss ->
  {
    flood;
  }
}
